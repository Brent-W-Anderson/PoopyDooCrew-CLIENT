{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react-jsx",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "exclude": ["node_modules/", "dist/"],
    "include": ["src/**/*", "./eslint.config.mjs"]
}
